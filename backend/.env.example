# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/swafy
SPRING_DATASOURCE_USERNAME=swafy_user
SPRING_DATASOURCE_PASSWORD=your_secure_password_here
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA/Hibernate Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQL13Dialect
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# Server Configuration
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api
SPRING_APPLICATION_NAME=swafy-backend

# Spring Profile (dev, prod, test)
SPRING_PROFILES_ACTIVE=dev

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_at_least_256_bits_long_here
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_SWAFY=DEBUG
LOGGING_FILE=logs/swafy.log
LOGGING_FILE_MAX_SIZE=10MB
LOGGING_FILE_MAX_HISTORY=10

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,metrics,info,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# Email Configuration (for notifications)
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your_email@gmail.com
SPRING_MAIL_PASSWORD=your_app_password_here
SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH=true
SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true
SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_REQUIRED=true

# Firebase/Push Notification Configuration
FIREBASE_CONFIG_PATH=path/to/firebase-config.json

# Payment Integration (Stripe/PayPal)
STRIPE_API_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Redis Configuration (for caching and sessions)
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=
SPRING_REDIS_TIMEOUT=2000ms

# AWS/Cloud Configuration (if needed)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Application-specific Configuration
APP_NAME=Swafy
APP_VERSION=0.1.0
APP_TIMEZONE=UTC

# Ride Configuration
RIDE_BASE_FARE=5.00
RIDE_PER_KM_RATE=2.50
RIDE_PER_MINUTE_RATE=0.50
RIDE_SURGE_MULTIPLIER=1.5
RIDE_MATCHING_RADIUS_KM=5.0

# Driver Configuration
DRIVER_MIN_RATING=4.0
DRIVER_VERIFICATION_REQUIRED=true

# Pagination Defaults
PAGE_DEFAULT_SIZE=20
PAGE_MAX_SIZE=100
